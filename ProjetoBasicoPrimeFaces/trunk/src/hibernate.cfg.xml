<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="hibernateSessionFactory">
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.generate_statistics">true</property>
		<property name="hibernate.use_sql_comments">true</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.query.factory_class">org.hibernate.hql.classic.ClassicQueryTranslatorFactory</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">100</property>
		<property name="hibernate.c3p0.max_size">100</property>
		<property name="hibernate.c3p0.max_statements">0</property>
		<property name="hibernate.c3p0.min_size">10</property>
		<property name="hibernate.c3p0.timeout">100</property>
		<property name="hbm2ddl.auto">auto</property> 
		
		<mapping class="br.com.flavios.pbpf.negocio.controle.entidade.EstoqueProdutoTO" />
		<mapping class="br.com.flavios.pbpf.negocio.controle.entidade.FilialTO" />
		<mapping class="br.com.flavios.pbpf.negocio.controle.entidade.OrcamentoTO" />
		<mapping class="br.com.flavios.pbpf.negocio.controle.entidade.ProdutoTO" />
		<mapping class="br.com.flavios.pbpf.negocio.controle.entidade.SistemaTO" />
		<mapping class="br.com.flavios.pbpf.negocio.controle.entidade.UsuarioTO" />
	</session-factory>
</hibernate-configuration>
